<<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta http-equiv="x-ua-compatible" content="ie=edge" />
    <link rel="shortcut icon" href="/images/election.png" type="image/x-icon">
    <link rel="shortcut icon" href="/images/election.png" type="image/x-icon">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.11.2/css/all.css" />
    <!-- Google Fonts Roboto -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap" />
    <!-- Bootstrap CSS -->
    <link href="/css/bootstrap.min.css" rel="stylesheet">
   <!-- Custom styles -->
 <link rel="stylesheet" href="/css/admin.css">
 <link rel="stylesheet" href="/css/style.css" />
    <!-- Additional Libraries -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.4/Chart.min.js" integrity="sha512-d9xgZrVZpmmQlfonhQUvTR7lMPtO7NkZMkA0ABN3PHCbKA5nqylQ/yWlFAyY6hYgdF1Qh6nYiuADWwKB4C2WSw==" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>


<title>Votewise | <%= user.first_name %> <%= user.middle_name %> <%= user.last_name %></title>
<style>
  body {
    font-family: 'Roboto', sans-serif;
    background-color: #f8f9fa;
    color: #333;
    margin: 0;
    padding: 0;
  }

  .container {
    max-width: 900px;
    margin: 2rem auto;
    background: #ffffff;
    border-radius: 15px;
    box-shadow: 0px 4px 15px rgba(0, 0, 0, 0.2);
    overflow: hidden;
    padding: 20px;
  }

  .container h1 {
    font-size: 2rem;
    font-weight: bold;
    margin-bottom: 20px;
    color: #007bff;
    text-align: center;
  }

  .profile-img-container {
    text-align: center;
    margin-bottom: 20px;
  }

  .profile-img-container img {
    width: 150px;
    height: 150px;
    border-radius: 50%;
    border: 4px solid #007bff;
  }

  .profile-name {
    text-align: center;
    margin-top: 10px;
  }

  .profile-name h4 {
    font-size: 1.5rem;
    margin: 0;
    color: #333;
  }

  .profile-name h6 {
    font-size: 1rem;
    color: gray;
    margin: 5px 0;
  }

  .status-container {
    text-align: center;
    margin: 15px 0;
  }

  .status-container span {
    font-size: 16px;
    font-weight: bold;
    margin-right: 10px;
  }

  .status-container .btn {
    margin: 0 5px;
  }

  .info {
    background-color: #f1f3f5;
    padding: 20px;
    border-radius: 10px;
    margin-top: 20px;
  }

  .info p {
    font-size: 1.2rem;
    font-weight: 600;
    color: #555;
    margin-bottom: 10px;
  }

  .info span {
    display: block;
    margin: 5px 0;
    font-size: 1rem;
    color: #333;
  }

  .info hr {
    margin: 15px 0;
    border: none;
    border-top: 1px solid #e0e0e0;
  }

  @media (max-width: 768px) {
    .container {
      padding: 10px;
    }

    .container h1 {
      font-size: 1.8rem;
    }

    .profile-img-container img {
      width: 120px;
      height: 120px;
    }

    .info {
      padding: 15px;
    }

    .info p {
      font-size: 1rem;
    }

    .info span {
      font-size: 0.9rem;
    }
  }
</style>
</head>
<body>
    <header>
        <%- include('./layout/navbar') -%>
      </header>
    
  <div class="container" style="margin-top: 100px; padding-left: 0">
    <h1>Voter Profile</h1>
    <div class="profile-img-container">
      <img src="data:image/png;base64,<%= user.profile_picture %>" alt="User Profile">
    </div>
    <div class="profile-name">
      <h4><%= user.first_name %> <%= user.middle_name %> <%= user.last_name %></h4>
      <h6>@<%= user.username %></h6>
    </div>
    <div class="status-container">
      <span>Role:</span>
      <span id="role-badge" class="badge bg-primary"><%= user.role %></span>
      <span>Status:</span>
      <span id="role-badge" class="badge bg-<%= voteStatus === 'Voted' ? 'success' : 'danger' %>"><%= voteStatus %></span>
    </div>
    <div class="info">
      <p>Personal Info:</p>
      <hr>
      <span><strong>First Name:</strong> <%= user.first_name %></span>
      <span><strong>Middle Name:</strong> <%= user.middle_name %></span>
      <span><strong>Last Name:</strong> <%= user.last_name %></span>
      <span><strong>Date of Birth:</strong> <%= user.DOB %></span>
    </div>
  </div>
<%- include('layout/footer') %>
