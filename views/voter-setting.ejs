<%- include('layout/header') %>

<style>
  body {
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    background-color: #f4f6f8;
    margin: 0;
    padding: 0;
    color: #343a40;
  }

  .container-setting {
    max-width: 480px;
    margin: 6rem auto 3rem;
    background: #ffffff;
    padding: 2.5rem 2rem 3rem;
    border-radius: 12px;
    box-shadow: 0 6px 20px rgba(0, 0, 0, 0.1);
  }

  .container-setting h2 {
    font-size: 2.25rem;
    font-weight: 700;
    text-align: center;
    margin-bottom: 0.5rem;
    color: #007bff;
  }

  .container-setting h6 {
    font-weight: 500;
    font-size: 1rem;
    text-align: center;
    color: #6c757d;
    margin-bottom: 2rem;
  }

  .nav-tabs {
    border-bottom: none;
    display: flex;
    justify-content: center;
    gap: 1rem;
    margin-bottom: 2rem;
  }

  .nav-tabs .nav-link {
    font-weight: 600;
    padding: 0.625rem 1.5rem;
    border-radius: 25px;
    border: 1px solid transparent;
    color: #495057;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .nav-tabs .nav-link:hover {
    background-color: #e9ecef;
    color: #007bff;
  }

  .nav-tabs .nav-link.active {
    background-color: #007bff;
    color: #fff !important;
    border-color: #007bff;
    box-shadow: 0 4px 8px rgb(0 123 255 / 0.3);
  }

  .tab-content {
    padding: 0 0.5rem;
  }

  form {
    max-width: 100%;
  }

  .form-floating {
    margin-bottom: 1.5rem;
  }

  .form-control {
    border-radius: 8px;
    border: 1.5px solid #ced4da;
    font-size: 1rem;
    padding: 1rem 0.75rem;
    transition: border-color 0.3s ease;
  }

  .form-control:focus {
    border-color: #007bff;
    box-shadow: 0 0 0 0.2rem rgb(0 123 255 / 0.25);
  }

  label {
    font-weight: 600;
    color: #495057;
  }

  .btn-primary {
    background-color: #007bff;
    border: none;
    font-weight: 600;
    font-size: 1.125rem;
    padding: 0.75rem;
    border-radius: 50px;
    width: 100%;
    transition: background-color 0.3s ease;
  }

  .btn-primary:hover {
    background-color: #0056b3;
  }

  @media (max-width: 576px) {
    .container-setting {
      margin: 3rem 1rem 2rem;
      padding: 2rem 1.5rem 2.5rem;
    }
    .nav-tabs {
      flex-wrap: wrap;
    }
  }
</style>

<body>
  <header>
    <%- include('./layout/navbar') -%>
  </header>

  <main class="container-setting" id="voter-setting">
    <h2>Settings</h2>
    <h6>You can update your password here. Personal information is fixed from registration.</h6>

    <ul class="nav nav-tabs nav-justified mb-3" id="settings-tabs" role="tablist">
      <!-- Uncomment this block to enable username change tab -->
      <!--
      <li class="nav-item" role="presentation">
        <a class="nav-link" id="username-tab" data-bs-toggle="tab" href="#username" role="tab" aria-controls="username" aria-selected="false">Username</a>
      </li>
      -->
      <li class="nav-item" role="presentation">
        <a class="nav-link active" id="password-tab" data-bs-toggle="tab" href="#password" role="tab" aria-controls="password" aria-selected="true">Password</a>
      </li>
    </ul>

    <div class="tab-content">
      <!-- Username Tab Content - uncomment to enable
      <div class="tab-pane fade" id="username" role="tabpanel" aria-labelledby="username-tab">
        <h3 class="text-center mb-4">Update Username</h3>
        <form action="/setting/change/username" method="post" id="updateUsernameForm" autocomplete="off">
          <div class="form-floating">
            <input type="text" class="form-control" name="username" id="username" placeholder="Current Username" required>
            <label for="username">Current Username</label>
          </div>
          <div class="form-floating">
            <input type="text" class="form-control" name="Newusername" id="Newusername" placeholder="New Username" required>
            <label for="Newusername">New Username</label>
          </div>
          <label for="">Enter your password below to confirm updating your information</label>
          <div class="form-floating">
            <input type="password" class="form-control" name="password" id="passwordConfirmUsername" placeholder="Enter Password to confirm" required>
            <label for="passwordConfirmUsername">Enter your password to confirm</label>
          </div>
          <button type="submit" class="btn btn-primary">Change Username</button>
        </form>
      </div>
      -->

      <div class="tab-pane fade show active" id="password" role="tabpanel" aria-labelledby="password-tab">
        <h3 class="text-center mb-4">Change Password</h3>
        <form action="/setting/forget-password" method="post" id="forgetPasswordForm" autocomplete="off">
          <div class="form-floating">
            <input type="text" class="form-control" name="username" id="usernameInput" placeholder="Voter ID" required>
            <label for="usernameInput">Voter ID</label>
          </div>
          <div class="form-floating">
            <input type="password" class="form-control" name="password" id="newPassword" placeholder="New Password" required>
            <label for="newPassword">New Password</label>
          </div>
          <div class="form-floating">
            <input type="password" class="form-control" name="passwordConfirm" id="confirmPassword" placeholder="Confirm Password" required>
            <label for="confirmPassword">Confirm Password</label>
          </div>
          <button type="submit" class="btn btn-primary">Change Password</button>
        </form>
      </div>
    </div>
  </main>

  <script src="/js/setting.js"></script>
  <%- include('layout/footer') %>
</body>
