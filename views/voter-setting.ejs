<%- include('layout/header') %>

<style>
  body {
    font-family: Arial, sans-serif;
    background-color: #f8f9fa;
    margin: 0;
    padding: 0;
  }
  .container-setting {
    max-width: 600px;
    margin: 2rem auto;
    background: #ffffff;
    padding: 2rem;
    border-radius: 10px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  }
  .container-setting h2 {
    font-size: 2.5rem;
    text-align: center;
    margin-bottom: 1rem;
    color: #343a40;
  }
  .container-setting h6 {
    font-size: 1rem;
    text-align: center;
    color: #6c757d;
    margin-bottom: 2rem;
  }
  .nav-tabs .nav-link {
    color: #495057;
    border: 1px solid transparent;
    border-radius: 5px;
    padding: 0.75rem 1rem;
    text-align: center;
  }
  .nav-tabs .nav-link.active {
    background-color: #007bff;
    color: #ffffff;
    border-color: #007bff;
  }
  .tab-content {
    margin-top: 2rem;
  }
  .form-floating {
    margin-bottom: 1.5rem;
  }
  .btn {
    padding: 0.75rem;
    font-size: 1rem;
    width: 100%;
  }
  .btn-primary {
    background-color: #007bff;
    border-color: #007bff;
  }
  .btn-primary:hover {
    background-color: #0056b3;
    border-color: #004085;
  }
  @media (max-width: 768px) {
    .container-setting {
      width: 90%;
      padding: 1.5rem;
    }
  }
</style>
</head>
<body>
  <header>
    <%- include('./layout/navbar') -%>
  </header>
  <div class="container-setting" id="voter-setting" style="margin-top: 100px;">
    <h2>Settings</h2>
    <h6>You can update your username and password here. Personal information is fixed from registration.</h6>

    <ul class="nav nav-tabs nav-justified mb-3" id="settings-tabs" role="tablist">
      <li class="nav-item" role="presentation">
        <a class="nav-link active" id="username-tab" data-bs-toggle="tab" href="#username" role="tab" aria-controls="username" aria-selected="true">Username</a>
      </li>
      <li class="nav-item" role="presentation">
        <a class="nav-link" id="password-tab" data-bs-toggle="tab" href="#password" role="tab" aria-controls="password" aria-selected="false">Password</a>
      </li>
    </ul>

    <div class="tab-content">
      <div class="tab-pane fade show active" id="username" role="tabpanel" aria-labelledby="username-tab">
        <h3 class="text-center mb-4">Update Username</h3>
        <form action="/setting/change/username" method="post" id="updateUsernameForm" autocomplete="off">
          <div class="form-floating">
            <input type="text" class="form-control" name="username" id="username" placeholder="Current Username" required>
            <label for="username">Current Username</label>
          </div>
          <div class="form-floating">
            <input type="text" class="form-control" name="Newusername" id="Newusername" placeholder="New Username" required>
            <label for="Newusername">New Username</label>
          </div>

          <label for="">Enter your password below to confirm updating your information</label>
          <div class="form-floating">
            <input type="password" class="form-control" name="password" id="" placeholder="Enter Password to confirm" required>
            <label for="password">Enter your password to confirm</label>
          </div>
          <button type="submit" class="btn btn-primary">Change Username</button>
        </form>
      </div>
      <div class="tab-pane fade" id="password" role="tabpanel" aria-labelledby="password-tab">
        <h3 class="text-center mb-4">Change Password</h3>
        <form action="/setting/forget-password" method="post" id="forgetPasswordForm" autocomplete="off">
          <div class="form-floating">
            <input type="text" class="form-control" name="username" id="username" placeholder="Username" required>
            <label for="username">Username</label>
          </div>
          <div class="form-floating">
            <input type="password" class="form-control" name="password" id="password" placeholder="New Password" required>
            <label for="password">New Password</label>
          </div>
          <div class="form-floating">
            <input type="password" class="form-control" name="passwordConfirm" id="passwordConfirm" placeholder="Confirm Password" required>
            <label for="passwordConfirm">Confirm Password</label>
          </div>
          <button type="submit" class="btn btn-primary">Change Password</button>
        </form>
      </div>
    </div>
  </div>
  <script src="/js/setting.js"></script>
  <%- include('layout/footer') %>
