<%- include('layout/header') %>
<link rel="stylesheet" href="/css/style.css" />

<style>
  body {
    background-color: #f5f7fa;
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  }

  .notification-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: 20px;
  }

  .notification-card {
    display: flex;
    background: #fff;
    border-radius: 10px;
    box-shadow: 0 6px 20px rgba(0, 0, 0, 0.05);
    padding: 15px;
    transition: all 0.25s ease-in-out;
    align-items: center;
  }

  .notification-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.08);
  }

  .notification-avatar {
    width: 48px;
    height: 48px;
    border-radius: 50%;
    object-fit: cover;
    margin-right: 15px;
    border: 2px solid #0d6efd;
  }

  .notification-content h5 {
    margin: 0;
    font-size: 1rem;
    color: #333;
    font-weight: 600;
  }

  .notification-content p {
    margin: 5px 0;
    font-size: 0.95rem;
    color: #555;
  }

  .notification-content small {
    color: #888;
    font-size: 0.8rem;
  }

  .no-notification-img {
    max-width: 200px;
    opacity: 0.75;
  }

  @media (max-width: 576px) {
    .notification-card {
      flex-direction: column;
      text-align: center;
    }

    .notification-avatar {
      margin-bottom: 10px;
    }
  }
</style>

<script src="/socket.io/socket.io.js"></script>
<script>
  document.addEventListener("DOMContentLoaded", function () {
    const socket = io();
    const userId = '<%= userId %>';
    socket.emit('join', userId);

    socket.on('new-notification', function (notification) {
      alert(`New notification: ${notification.message}`);
      // Optionally: dynamically insert notification into the DOM
    });
  });
</script>

</head>
<body>
  <header>
    <style>
    /* Full name styling */
    #fullName {
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
        max-width: 120px;
        display: inline-block;
        vertical-align: middle;
    }

    /* Notification badge styling */
    .badge-notification {
        position: absolute;
        top: 5px;
        right: 5px;
        font-size: 0.7rem;
        min-width: 18px;
        height: 18px;
        line-height: 18px;
        text-align: center;
    }

    /* Notification link container */
    .notification-container {
        position: relative;
        display: inline-block;
    }

    /* Navbar responsive fixes */
    .navbar-nav {
        align-items: center;
    }

    /* Desktop styles */
    @media (min-width: 992px) {
        #fullName {
            max-width: 150px;
        }
        
        .navbar-toggler {
            display: none;
        }
    }

    /* Tablet breakpoint */
    @media (max-width: 991px) {
        #fullName {
            max-width: 100px;
        }

        .navbar-brand img {
            height: 40px;
        }

        .notification-container .fas {
            font-size: 1.1rem !important;
        }
    }

    /* Mobile breakpoint */
    @media (max-width: 768px) {
        #fullName {
            max-width: 80px;
            font-size: 0.9rem;
        }

        .navbar-brand img {
            height: 35px;
        }

        .dropdown-toggle img {
            height: 35px !important;
            width: 35px !important;
        }

        .notification-container .fas {
            font-size: 1rem !important;
            margin-top: 8px !important;
        }

        .badge-notification {
            font-size: 0.6rem;
            min-width: 16px;
            height: 16px;
            line-height: 16px;
        }

        .dropdown-menu {
            font-size: 0.9rem;
        }
    }

    /* Small mobile breakpoint */
    @media (max-width: 480px) {
        #fullName {
            max-width: 60px;
            font-size: 0.8rem;
        }

        .navbar-brand img {
            height: 30px;
        }

        .dropdown-toggle img {
            height: 30px !important;
            width: 30px !important;
        }

        .notification-container .fas {
            font-size: 0.9rem !important;
            margin-top: 6px !important;
        }

        .navbar-toggler {
            padding: 0.25rem 0.5rem;
            font-size: 0.9rem;
        }

        .container-fluid {
            padding-left: 0.75rem;
            padding-right: 0.75rem;
        }
    }

    /* Extra small devices */
    @media (max-width: 320px) {
        #fullName {
            display: none; /* Hide name on very small screens */
        }

        .navbar-brand img {
            height: 28px;
        }

        .dropdown-toggle img {
            height: 28px !important;
            width: 28px !important;
        }
    }

    /* Fix dropdown positioning */
    .dropdown-menu {
        position: absolute !important;
        right: 0;
        left: auto;
        min-width: 160px;
    }

    /* Ensure proper spacing */
    .nav-item {
        margin: 0 0.25rem;
    }

    .nav-link {
        padding: 0.5rem 0.75rem;
    }
</style>

