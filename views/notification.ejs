/* Style for the notification box */
#notification-box {
  position: fixed;
  top: 80px;
  left: 50%;
  transform: translateX(-50%);
  background-color: #4CAF50;
  color: white;
  padding: 15px;
  border-radius: 5px;
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
  z-index: 1000;
  font-size: 1rem;
  animation: fadeIn 0.5s ease-in-out;
}

/* Smooth fade-in animation */
@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateX(-50%) translateY(-10px);
  }
  to {
    opacity: 1;
    transform: translateX(-50%) translateY(0);
  }
}

/* Notifications list */
#notification-list {
  list-style-type: none;
  padding: 20px;
  width: 70%;

}

#notification-list li {
  /* display: flex; */
  /* align-items: flex-start; */
  margin-bottom: 10px;
}

#notification-list li img {
  width: 30px;
  height: 30px;
  margin-right: 5px;
}

#notification-list li span {
  font-size: 0.9rem;
  color: #333;
}

#notification-list li span#title {
  font-weight: bold;
  color: #000;
}

#notification-list li span img {
  /* margin-left: 10px; */
  width: 15px;
  height: 15px;
}

/* No notification image */
#no-notification {
  display: block;
  margin: 20px auto;
  max-width: 200px;
}


@media only screen and (max-width: 768px){
  #notification-list {
  list-style-type: none;
  padding: 20px;
  width: 100%;

}
  #fullName{
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    max-width: 55px;
    display: inline-block;
    vertical-align: middle;
  }
  #container{
    margin-left: 15px;
  }
}
@media only screen and (min-width: 600px){
  #fullName{
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    max-width: 55px;
    display: inline-block;
    vertical-align: middle;
  }
  #container{
    margin-left: 15px;
  }
}
</style>

<script src="/socket.io/socket.io.js"></script>
<script>
  document.addEventListener("DOMContentLoaded", function() {
    const socket = io();
    
    const userId = '<%= userId %>'; 
    socket.emit('join', userId);
    
    socket.on('new-notification', function(notification) {
      alert(`New notification: ${notification.message}`);
      
      const notificationList = document.getElementById('notification-list');
      const newNotification = document.createElement('li');
      newNotification.textContent = `${notification.title}: ${notification.message}`;
      notificationList.appendChild(newNotification);
    });
  });
</script>



