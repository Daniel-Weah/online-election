<%- include('layout/header') %>   
 
<style>
  form{
    width: 29vw;
  }
  section{
    display: grid; justify-items: center;padding: 0.8rem;width: 50%;margin: 0 auto; border-radius: 10px;
  }
  @media only screen and (max-width: 600px){
  form {
    width: 100%;
  }
  section{
    margin-top: 20px;
    width: 100%;
    padding: 0;
  }
  }
  @media only screen and (min-width: 600px) and (max-width: 768px){
  form {
    width: 100%;
  }
  section{
    margin-top: 20px;
    width: 100%;
    padding: 0;
  }
  }
</style>
    </head>

    <body>

        <!--Main layout-->
        <main style="margin-top: 50px; padding-left: 0" >
            
            <div class="container pt-2 ">
                <!--Section: Statistics with subtitles-->
                <section  class="bg-light">
                    <h1 class="mb-4" style="text-align: center;">Login</h1>
                    <h3 class="fs-6 fw-normal text-secondary m-0 mb-3">Please enter your correct credentials to login</h3>

                    <% if (typeof errorMessage !== 'undefined') { %>
                      <p style="color: red;"><%= errorMessage %></p>
                    <% } %>

                    <form method="post" action="/login" >
                        <div class="col-12">
                            <div class="form-floating mb-3">
                              <input type="text" class="form-control" name="username" id="userName" placeholder="User Name" required>
                              <label for="userName" class="form-label">User Name</label>
                            </div>
                          </div>

                          <div class="col-12">
                            <div class="form-floating mb-3">
                              <input type="password" class="form-control" name="password" id="password" value="" placeholder="Password" required>
                              <label for="password" class="form-label">Password</label>
                            </div>
                          </div>

                        <!-- Submit button -->
                        <div class="mb-3">
                            <article class="mb-2">
                                <a href="/forget-password">Forget Password</a>
                            </article>

                            <button style="width: 100%; margin-top: 10px;" id="login-btn" class="btn btn-primary btn-block btn-lg mb-4">Login</button>
                        </div>

                    </form>
                 
                </section>
            </div>
        </main>
  
    </body>

    </html>